// Program 3: Sorting using different algorithms

#include <stdio.h>

void swap(int *a, int *b) {
    int t = *a;
    *a = *b;
    *b = t;
}

// Bubble Sort  - Time: O(n^2)
void bubbleSort(int a[], int n) {
    int i, j;
    for (i = 0; i < n - 1; i++)
        for (j = 0; j < n - 1 - i; j++)
            if (a[j] > a[j + 1])
                swap(&a[j], &a[j + 1]);
}

// Insertion Sort - Time: O(n^2)
void insertionSort(int a[], int n) {
    int i, key, j;
    for (i = 1; i < n; i++) {
        key = a[i];
        j = i - 1;
        while (j >= 0 && a[j] > key) {
            a[j + 1] = a[j];
            j--;
        }
        a[j + 1] = key;
    }
}

// Quick Sort - Average: O(n log n)
int partition(int a[], int low, int high) {
    int pivot = a[high];
    int i = low - 1;
    int j;
    for (j = low; j < high; j++) {
        if (a[j] <= pivot) {
            i++;
            swap(&a[i], &a[j]);
        }
    }
    swap(&a[i + 1], &a[high]);
    return i + 1;
}

void quickSort(int a[], int low, int high) {
    if (low < high) {
        int pi = partition(a, low, high);
        quickSort(a, low, pi - 1);
        quickSort(a, pi + 1, high);
    }
}

// Merge Sort - Time: O(n log n)
void merge(int a[], int l, int m, int r) {
    int n1 = m - l + 1;
    int n2 = r - m;
    int L[100], R[100];
    int i, j, k;

    for (i = 0; i < n1; i++) L[i] = a[l + i];
    for (j = 0; j < n2; j++) R[j] = a[m + 1 + j];

    i = j = 0;
    k = l;

    while (i < n1 && j < n2) {
        if (L[i] <= R[j])
            a[k++] = L[i++];
        else
            a[k++] = R[j++];
    }
    while (i < n1) a[k++] = L[i++];
    while (j < n2) a[k++] = R[j++];
}

void mergeSort(int a[], int l, int r) {
    if (l < r) {
        int m = (l + r) / 2;
        mergeSort(a, l, m);
        mergeSort(a, m + 1, r);
        merge(a, l, m, r);
    }
}

// Heap Sort - Time: O(n log n)
void heapify(int a[], int n, int i) {
    int largest = i;
    int l = 2 * i + 1;
    int r = 2 * i + 2;

    if (l < n && a[l] > a[largest]) largest = l;
    if (r < n && a[r] > a[largest]) largest = r;

    if (largest != i) {
        swap(&a[i], &a[largest]);
        heapify(a, n, largest);
    }
}

void heapSort(int a[], int n) {
    int i;
    for (i = n / 2 - 1; i >= 0; i--)
        heapify(a, n, i);
    for (i = n - 1; i > 0; i--) {
        swap(&a[0], &a[i]);
        heapify(a, i, 0);
    }
}

void printArray(int a[], int n) {
    int i;
    for (i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int main() {
    int a[100], n, i, choice;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter elements:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("\n1. Bubble Sort (O(n^2))");
    printf("\n2. Insertion Sort (O(n^2))");
    printf("\n3. Quick Sort (O(n log n))");
    printf("\n4. Merge Sort (O(n log n))");
    printf("\n5. Heap Sort (O(n log n))");
    printf("\nEnter choice: ");
    scanf("%d", &choice);

    switch (choice) {
    case 1: bubbleSort(a, n); break;
    case 2: insertionSort(a, n); break;
    case 3: quickSort(a, 0, n - 1); break;
    case 4: mergeSort(a, 0, n - 1); break;
    case 5: heapSort(a, n); break;
    default: printf("Invalid choice!\n"); return 0;
    }

    printf("Sorted array: ");
    printArray(a, n);

    // Comparison (just printed info)
    printf("\nTime Complexity (Worst Case):\n");
    printf("Bubble Sort   : O(n^2)\n");
    printf("Insertion Sort: O(n^2)\n");
    printf("Quick Sort    : O(n^2), Average: O(n log n)\n");
    printf("Merge Sort    : O(n log n)\n");
    printf("Heap Sort     : O(n log n)\n");

    return 0;
}
