// Program 4: Linear search and Binary search

#include <stdio.h>

// Linear Search - O(n)
int linearSearch(int a[], int n, int key) {
    int i;
    for (i = 0; i < n; i++)
        if (a[i] == key)
            return i;
    return -1;
}

// Binary Search - O(log n) (array must be sorted)
int binarySearch(int a[], int n, int key) {
    int low = 0, high = n - 1, mid;
    while (low <= high) {
        mid = (low + high) / 2;
        if (a[mid] == key)
            return mid;
        else if (a[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {
    int a[100], n, i, key, pos;
    printf("Enter number of elements (sorted order for binary search): ");
    scanf("%d", &n);
    printf("Enter elements:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("Enter key to search: ");
    scanf("%d", &key);

    pos = linearSearch(a, n, key);
    if (pos != -1)
        printf("Linear Search: Found at index %d\n", pos);
    else
        printf("Linear Search: Not found\n");

    pos = binarySearch(a, n, key);
    if (pos != -1)
        printf("Binary Search: Found at index %d\n", pos);
    else
        printf("Binary Search: Not found\n");

    printf("\nTime Complexity (Worst Case):\n");
    printf("Linear Search : O(n)\n");
    printf("Binary Search : O(log n)\n");

    return 0;
}
